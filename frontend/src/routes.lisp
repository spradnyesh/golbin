(in-package :hawksbill.golbin.frontend)

(mount-submodule -static- (#:restas.directory-publisher)
  (restas.directory-publisher:*baseurl* '("static"))
  (restas.directory-publisher:*directory* (merge-pathnames "static/" *home*)))

(define-route route-home ("/") (view-home))
(define-route route-home-page ("/:page/") (view-home page))
(define-route route-cat ("c/:cat/") (view-cat cat))
(define-route route-cat-page ("c/:cat/:page/") (view-cat cat page))
(define-route route-cat-subcat ("cs/:cat/:subcat/") (view-cat-subcat cat subcat))
(define-route route-cat-subcat-page ("cs/:cat/:subcat/:page/") (view-cat-subcat cat subcat page))
(define-route route-tag ("t/:tag/") (view-tag tag))
(define-route route-tag-page ("t/:tag/:page/") (view-tag tag page))
(define-route route-author ("a/:author/") (view-author author))
(define-route route-author-page ("a/:author/:page/") (view-author author page))
(define-route route-article (":(slug-and-id).html") (view-article slug-and-id))
(define-route route-search ("search/") (view-search))
